<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@color/global_rgba"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/common_title_bar" />
    <RelativeLayout
        android:id="@+id/rl_score_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dip">
        <TextView
            android:textSize="@dimen/text_size_carcheck"
            android:textColor="@color/global_tintcolor"
            android:gravity="center"
            android:id="@+id/tv_car_check_score"
            android:visibility="visible"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="99"
            android:layout_centerInParent="true" />
        <ImageView
            android:id="@+id/checked_score_bg"
            android:background="@mipmap/car_check_report_score_bg"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-6.0dip"

            android:layout_below="@id/tv_car_check_score"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/reportHistory"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:layout_marginTop="30.0dip">
        <ImageView
            android:id="@+id/arrow"
            android:background="@mipmap/arrow_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip" />
        <TextView
            android:textSize="@dimen/BasicTextSize"
            android:textColor="@color/white120"
            android:id="@+id/report_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.0dip"
            android:text="检测报告" />
        <TextView
            android:textColor="@color/black"
            android:gravity="center"
            android:id="@+id/report_amount"
            android:background="@drawable/car_check_report_layout_amount_normal"
            android:layout_width="20.0dip"
            android:layout_height="20.0dip"
            android:layout_marginLeft="5.0dip"
            android:text="3" />

        <TextView
            android:textSize="@dimen/BasicTextSize"
            android:textColor="@color/white"
            android:gravity="right"
            android:id="@+id/report_time"
            android:paddingRight="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2.0dip"
            android:text="2015/05/18 23:32:05" />
    </LinearLayout>
    <View
        android:background="@color/line"
        android:layout_width="fill_parent"
        android:layout_height="0.30000007dip" />
